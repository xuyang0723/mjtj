.expert_info {
    box-sizing: border-box;
    width: 100%;
    padding: 25rpx 26rpx; 
    background-color: #fff;
    box-shadow:0 7rpx 20rpx 0 rgba(226,226,226,0.41);
}
.expert_info_topBox {
    box-sizing: border-box;
    width: 100%;
    padding-bottom: 15rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.expert_info_topBox_left {
    display: flex;
}
.expert_info_logo {
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
}
.expert_info_nameBox {
    margin-left: 22rpx;
}
.expert_info_name {
    font-size: 32rpx;
    color: #000;
    font-weight: 600;
    margin-bottom: 14rpx;
    display: block;
}
.expert_info_topBox_right {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.expert_focus_btnBox {
    width:120rpx;
    height:46rpx;
    background:rgba(255,32,41,1);
    border-radius:23rpx;
    margin-bottom: 14rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.expert_focus_btn {
    font-size: 24rpx;
    color: #fff;
    line-height: 24rpx;
}
.expert_focus_number {
    font-size: 22rpx;
    color: #000;
}
.expert_info_bottomBox {
    font-size: 28rpx;
    line-height: 46rpx;
    color: #000;
}
.expert_info_tag{
    color: #E84025;
    border-width: 1rpx;
    border-style: solid;
    border-color:#E84025;
    display: inline-block;
    margin-right: 20rpx;
    font-size: 24rpx;
    line-height: 28rpx;
    box-sizing: border-box;
    border-radius: 4rpx;
    padding: 5rpx 10rpx;
}
.expert_title{
  margin: 24rpx;
  color: #333;
  font-size: 28rpx;
}
.expert_title_H2{
  padding: 20rpx;
  text-align: center;
  font-size: 32rpx;
  display: block;
  font-weight: bold
}
.expert_title_mess{
  line-height: 1.5;
}
