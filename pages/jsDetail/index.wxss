.lists2 .table{
    margin: 0 24rpx;
    background-color: rgb(54,56,60);
    border-collapse:collapse;
}
.lists2 .table .th,.lists2 .table .tr{
    display: flex;
    justify-content: space-around;
}
.lists2 .table text{
    color: #fff;
    flex: 1;
    font-size: 24rpx;
    padding: 30rpx 0;
    text-align: center;
    border: 1px rgb(44,46,52) solid;
}
.lists2 .table .th_text_txt{
    position: absolute;
    padding: 0;
    border:none;
    left: 50%;
    top:50%;
    width: 30rpx;
    height: 30rpx;
    overflow: hidden;
    margin-left: -15rpx;
    margin-top:-15rpx;
}
.lists2 .table .th_text{
    position: relative;
    font-weight: bold;
    color: rgba(255,255,255,0.4);
}
.lists2 .table .text{
    color: rgba(255,255,255,0.8);
    letter-spacing: 1px;
}
.lists2 .table .color_red text{
    color: #F12D3F;
}
.lists2 .table .color_red text:nth-child(1){
    color: rgba(255,255,255,0.4);
}