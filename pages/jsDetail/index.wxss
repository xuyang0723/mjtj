.buy-stuta{
    position: relative;
}
.buy-stuta .bg{
    background-color: #fff;
    padding: 50rpx;
    margin:24rpx 24rpx 130rpx;
}
.bg_p{
    display: block;
    text-align: center;
    line-height: 2;
